<?xml version="1.0" encoding="UTF-8"?>

<?import com.hyd.pass.fx.CategoryTreeView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            stylesheets="@/css/style.css"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hyd.pass.controllers.MainController"
            prefHeight="650.0" prefWidth="850.0">

    <top>
        <MenuBar>
            <Menu text="文件">
                <MenuItem text="新建(_N)..." onAction="#newFileClicked" accelerator="Shortcut+N"/>
                <MenuItem text="打开(_O)..." onAction="#openFileClicked" accelerator="Shortcut+O"/>
                <SeparatorMenuItem/>
                <MenuItem text="保存(_S)" onAction="#saveClicked" accelerator="Shortcut+S"/>
                <MenuItem text="退出(_X)" onAction="#exitClicked"/>
            </Menu>
            <Menu text="编辑">
                <MenuItem text="修改主密码..." onAction="#changeMasterPasswordClicked"/>
            </Menu>
            <Menu text="选项">
                <CheckMenuItem text="启动时自动打开最近的文件" onAction="#autoOpenToggleClicked" fx:id="mnuAutoOpen"/>
                <CheckMenuItem text="退出时自动保存" onAction="#autoSaveToggleClicked" fx:id="mnuAutoSave"/>
                <CheckMenuItem text="笔记自动换行" onAction="#noteWrapToggleClicked" fx:id="mnuNoteWrap"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <HBox>
            <VBox prefWidth="150" style="-fx-background-color: #1d5fb5">
                <Label text="Tag 列表"/>
            </VBox>
            <VBox prefWidth="150" style="-fx-background-color: #d7ba2a">
                <Label text="Entry 列表"/>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: #97ceff">
                <Label text="账户信息和笔记"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
