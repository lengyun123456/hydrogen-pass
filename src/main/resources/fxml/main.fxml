<?xml version="1.0" encoding="UTF-8"?>

<?import com.hyd.pass.fx.CategoryTreeView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hyd.pass.controllers.MainController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <MenuBar>
            <Menu text="文件">
                <MenuItem text="新建..." onAction="#newFileClicked"/>
                <MenuItem text="打开..." onAction="#openFileClicked"/>
                <SeparatorMenuItem/>
                <MenuItem text="保存" onAction="#saveClicked"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <SplitPane fx:id="split1">
            <CategoryTreeView fx:id="tvCategories" maxWidth="300"/>
            <SplitPane orientation="VERTICAL" fx:id="split2">
                <TableView fx:id="tblEntries" maxHeight="400"/>
                <VBox>
                    <TableView fx:id="tvAuthentications"/>
                    <Pane prefHeight="150"/>
                </VBox>
            </SplitPane>
        </SplitPane>
    </center>
</BorderPane>
